<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/bg_f0f3fa"
    android:paddingVertical="10dp"
    android:paddingStart="10dp">

    <LinearLayout
        android:id="@+id/historyItemLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="#999999"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/itemDateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2022-10-05"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textColor="#999999"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/itemTypeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AniCheck"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/itemResultTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30mg/ml"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/historyItemLayout"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>